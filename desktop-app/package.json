{
  "name": "chatorbitor-sync",
  "version": "2.0.0",
  "description": "Chat Orbitor Multi-Platform Sync - Syncs your DMs from Twitter, Instagram, WhatsApp & more",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "author": "Chat Orbitor",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "auto-launch": "^5.0.6",
    "axios": "^1.6.2",
    "electron-store": "^8.1.0",
    "qrcode": "^1.5.4",
    "whatsapp-web.js": "^1.34.2"
  },
  "build": {
    "appId": "com.chatorbitor.twitter-sync",
    "productName": "ChatOrbitor Twitter Sync",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false
    },
    "portable": {
      "artifactName": "ChatOrbitor-Sync-Portable.exe"
    }
  }
}
